[alias]
    new = init
    a = add
    all = add --all
    b = branch
    bd = branch -d
    bl = blame
    cdroot = !cd `git root`
    ci = commit -S -s
    cia = commit -S -s --amend
    cie = commit -S -s --allow-empty
    cian = commit -S -s --amend --no-edit
    cl = clean -df
    co = checkout
    coo = checkout --ours
    cot = checkout --theirs
    d = rm
    df = diff
    dt = difftool
    f = fetch
    fa = fetch --all
    fi = fetch --origin
    hist = log --pretty=format:'%h %ad | %s%d [%an]' --graph --date=short
    ignored = ls-files --ignored --exclude-standard --others
    l = log --pretty --oneline
    lg = log --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --color --graph --abbrev-commit --
    logp = log --pretty
    m = merge
    mt = mergetool
    pl = pull
    plo = pull origin
    plom = pull origin main
    plt = pull --dry-run
    pr = pull --rebase
    ps = push
    psf = push --force
    psu = push --set-upstream
    rb = rebase
    rba = rebase --abort
    rbad = rebase --committer-date-is-author-date
    rbc = rebase --continue
    rbi = rebase -i
    rbs = rebase --skip
    rem = remote
    rema = remote add
    remr = remote remove
    remotes = remote -v
    s = status
    st = stash
    sta = stash apply
    stc = stash clear
    std = stash drop
    stl = stash list
    stp = stash pop
    standup = shortlog --since=yesterday
    sw = switch
    uca = reset --soft HEAD@{1}
    uc = reset HEAD^
    unstage = reset HEAD --
    who = shortlog -s -n --no-merges --
